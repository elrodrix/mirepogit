<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:spiritconsultingllc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cronista.dolarya.activities.ConfigurationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#cbe4e9"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/layout_rates"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/clickable_menu_row"
            android:clickable="true">

            <ImageView
                android:id="@+id/icon_cotizaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/clickable_menu_rates" />

            <com.cronista.dolarya.helpers.CustomTextView
                android:id="@+id/text_cotizaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/icon_cotizaciones"
                android:layout_toRightOf="@+id/icon_cotizaciones"
                android:text="Cotizaciones"
                android:textColor="@drawable/clickable_menu_text"
                android:textSize="18sp"
                spiritconsultingllc:customFont="Roboto-Light.ttf" />

            <ImageView
                android:id="@+id/arrow_cotizaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/clickable_menu_arrow" />

        </RelativeLayout>


